<?xml version="1.0" encoding="UTF-8"?>

<root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="apinasajon.xsd">
	<models sistema="estoque" modulo="Unidade">
		<model>
			<nome>Novo</nome>
			<field nome="idunidade" controlType="Guid" required="False" notnull="True"/>
			<field nome="codigo" controlType="String" tamanho="6" required="True" notnull="True"/>
			<field nome="descricao" controlType="String" tamanho="40" required="True" notnull="True"/>
			<field nome="decimais" controlType="Integer"/>
			<field nome="idgrupo" controlType="Guid"/>
		</model>	
		<model>
			<nome>Alterar</nome>
			<field nome="idunidade" controlType="Guid" required="False" notnull="True"/>
			<field nome="descricao" controlType="String" tamanho="40" required="True" notnull="True"/>
			<field nome="decimais" controlType="Integer"/>
		</model>	
		<model>
			<nome>Excluir</nome>			
			<field nome="idunidade" controlType="Guid" required="True" notnull="True"/>			
		</model>
	</models>
</root>